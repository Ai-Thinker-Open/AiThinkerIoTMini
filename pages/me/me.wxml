<scroll-view scroll-y class="scrollPage">
	<view class="UCenter-bg" style="background-image:url('https://aithinker-static.oss-cn-shenzhen.aliyuncs.com/officialwebsite/wechatmini_iot/meBg.png');">
		<view class="userinfo"></view>

		<!-- 用户 openid -->
		<view class="userinfo">
			<button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="userinfo-avatar" style="background-image: url({{avatarUrl}})" size="default"></button>
			<view class="userinfo-nickname-wrapper">
				<button class="userinfo-nickname" open-type="getUserInfo" bindgetuserinfo="getUserInfo">{{userInfo}}</button>
			</view>
		</view>
	</view>
	<view class="padding flex text-center text-grey bg-white shadow-warp">
		<view class="flex flex-sub flex-direction solid-right">
			<view class="margin-top-sm">
				<text class="cuIcon-appreciate"></text> 专业无线</view>
		</view>
		<view class="flex flex-sub flex-direction solid-right">

			<view class="margin-top-sm">
				<text class="cuIcon-appreciate"></text> 快速上云</view>
		</view>
		<view class="flex flex-sub flex-direction">
			<view class="margin-top-sm">
				<text class="cuIcon-appreciate"></text> 深度开源</view>
		</view>
	</view>
	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/open/index" hover-class="none">
				<text class="cuIcon-github text-grey"></text>
				<text class="text-grey">开源地址</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/version/index" hover-class="none">
				<text class="cuIcon-github text-grey"></text>
				<text class="text-grey">维护日志</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<button class="cu-btn content" open-type="feedback">
				<text class="cuIcon-writefill text-cyan"></text>
				<text class="text-grey">意见反馈</text>
			</button>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/aithinker/index" hover-class="none">
				<text class="cuIcon-creativefill text-orange"></text>
				<text class="text-grey">联系我们</text>
			</navigator>
		</view>
	</view>
	<view class="cu-tabbar-height"></view>
</scroll-view>